<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN"> 

<Properties>
		<Property name="basePath">/Users/kappu/eclipse-workspace/ShopperStackProject/logs</Property>
	</Properties>

  <Appenders>
	  
	  <RollingFile name="LogFile" fileName="${basePath}/automation.log" filePattern="$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz"
                 ignoreExceptions="false">
   			 
   			<PatternLayout>
        		<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      		</PatternLayout>
    	
   			<policies>
				  <SizeBasedTriggeringPolicy size="20 MB" />>
			 </policies>
   		</RollingFile>    
   	  
	  
    	<Console name="Console" target="SYSTEM_OUT">
     		 <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    	</Console>
    	
     
  </Appenders>
  
	<Loggers>
		 
		<Logger name="com.shopper.qa.testcases" level="trace" additivity="false">
			<Appenderref ref="Console"/>
		</Logger>
		

    	<Root level="Trace">
        	<AppenderRef ref="LogFile"/>
    	</Root>
	</Loggers> 
</Configuration>